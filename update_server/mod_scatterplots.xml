<?xml version="1.0" encoding="utf-8"?>
<updates>
	<!-- See also https://docs.joomla.org/Deploying_an_Update_Server -->
	<update>
        <!-- === REQUIRED TAG ELEMENTS == -->
        <!-- ============================ -->

	    <!-- The name of the extension, this name will appear in the Name column of the Extension Manager's Update view -->
		<name>aMultis Scatter Plots</name>

		<!-- The installed name of the extension -->
        <element>mod_amultisscatterplots</element>
		
		<!-- The type of extension (component, module, plugin, etc.) -->
		<type>module</type>

		<!-- The client of the extension -->		
		<client>"site"</client>
		
        <!-- Definition of platform requirements -->
		<targetplatform name="joomla" version="4" />
		
		<!-- The version of the release -->
		<version>0.0.1.57</version>
		
		<!-- A link to an xml file holding the changelog. -->
		<changelogurl>https://update.amultis.dev/joomla/modules/scatterplots/changelog.xml</changelogurl>
		
		<downloads>
			<downloadurl type="upgrade" format="zip">https://download.amultis.dev/joomla/modules/scatterplots/mod_scatterplots_v0.0.1.57.zip</downloadurl>
		</downloads>
		
        <!-- === OPTIONAL TAG ELEMENTS == -->
        <!-- ============================ -->
		<!-- A short description of the extension (optional) A short description of the extension (optional)  -->
		<description>Module to show highcharts Scatter Plots in module on Joomla! 4 website</description>
		
		<!-- A URL to point users to containing information about the update -->
		<infourl title="Show Highcharts Scatter Plots">https://www.amultis.dev/scatterplots</infourl>
		
		<!-- The name of the extension maintainer (similar to the <author> tag in a manifest) -->
		<maintainer>Pierre Veelen</maintainer>
		<!-- The website of the extension maintainer (similar to the <authorUrl> tag in a manifest) -->
		<maintainerurl>https://amultis.dev</maintainerurl>
	</update>

</updates>
